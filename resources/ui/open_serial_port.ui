<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <object class="GtkWindow" id="open_serial_port_dialog">
        <property name="title">Open Serial Port</property>
        <property name="resizable">false</property>
        <property name="modal">true</property>
        <property name="hide-on-close">true</property>
        <child>
            <object class="GtkGrid" id="grid">
                <property name="margin-start">12</property>
                <property name="margin-end">12</property>
                <property name="margin-top">12</property>
                <property name="margin-bottom">12</property>
                <property name="row-spacing">12</property>
                <property name="column-spacing">12</property>
                <child>
                    <object class="GtkLabel" id="portlabel">
                        <property name="label">_Port:</property>
                        <property name="use-underline">true</property>
                        <property name="mnemonic-widget">port</property>
                        <property name="xalign">1</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">0</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkDropDown" id="port">
                        <layout>
                            <property name="column">1</property>
                            <property name="column-span">3</property>
                            <property name="row">0</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="baudratelabel">
                        <property name="label">_Baud Rate:</property>
                        <property name="use-underline">true</property>
                        <property name="mnemonic-widget">baudrate</property>
                        <property name="xalign">1</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">1</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkDropDown" id="baudrate">
                        <layout>
                            <property name="column">1</property>
                            <property name="column-span">3</property>
                            <property name="row">1</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="databitslabel">
                        <property name="label">_Data Bits:</property>
                        <property name="use-underline">true</property>
                        <property name="mnemonic-widget">databits</property>
                        <property name="xalign">1</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">2</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkDropDown" id="databits">
                        <layout>
                            <property name="column">1</property>
                            <property name="column-span">3</property>
                            <property name="row">2</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="paritylabel">
                        <property name="label">_Parity:</property>
                        <property name="use-underline">true</property>
                        <property name="mnemonic-widget">parity</property>
                        <property name="xalign">1</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">3</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkDropDown" id="parity">
                        <layout>
                            <property name="column">1</property>
                            <property name="column-span">3</property>
                            <property name="row">3</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="stopbitslabel">
                        <property name="label">_Stop Bits:</property>
                        <property name="use-underline">true</property>
                        <property name="mnemonic-widget">stopbits</property>
                        <property name="xalign">1</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">4</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkDropDown" id="stopbits">
                        <layout>
                            <property name="column">1</property>
                            <property name="column-span">3</property>
                            <property name="row">4</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="flowcontrolLabel">
                        <property name="label">_Flow Control:</property>
                        <property name="use-underline">true</property>
                        <property name="mnemonic-widget">flowcontrol</property>
                        <property name="xalign">1</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">5</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkDropDown" id="flowcontrol">
                        <layout>
                            <property name="column">1</property>
                            <property name="column-span">3</property>
                            <property name="row">5</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkLabel" id="modeLabel">
                        <property name="label">_Mode:</property>
                        <property name="use-underline">true</property>
                        <property name="mnemonic-widget">mode</property>
                        <property name="xalign">1</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">6</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkBox" id="mode">
                        <layout>
                            <property name="column">1</property>
                            <property name="column-span">3</property>
                            <property name="row">6</property>
                        </layout>
                        <child>
                            <object class="GtkCheckButton" id="mode_read">
                                <property name="label">Read</property>
                                <property name="active">true</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkCheckButton" id="mode_write">
                                <property name="label">Write</property>
                                <property name="group">mode_read</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkCheckButton" id="mode_readwrite">
                                <property name="label">Read/Write</property>
                                <property name="group">mode_read</property>
                            </object>
                        </child>
                    </object>
                </child>
                <child>
                    <object class="GtkSeparator">
                        <layout>
                            <property name="column">0</property>
                            <property name="column-span">4</property>
                            <property name="row">7</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkButton" id="refresh_port_list">
                        <property name="label">Refresh Ports</property>
                        <layout>
                            <property name="column">0</property>
                            <property name="row">8</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkButton" id="cancel">
                        <property name="label">Cancel</property>
                        <layout>
                            <property name="column">2</property>
                            <property name="row">8</property>
                        </layout>
                    </object>
                </child>
                <child>
                    <object class="GtkButton" id="connect">
                        <property name="label">Connect</property>
                        <layout>
                            <property name="column">3</property>
                            <property name="row">8</property>
                        </layout>
                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>